---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>

  <body class="bg-neutral-900 text-white min-h-screen">
    <header class="max-w-4xl mx-auto px-6 py-8">
      <div class="flex items-center justify-between">
        <a href="/" class="text-base font-medium hover:text-gray-300 transition-colors"> Lucas Barake </a>

        <div class="flex items-center space-x-4">
          <a
            href="https://github.com/lucas-barake"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="GitHub"
          >
            <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
