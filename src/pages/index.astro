---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Lucas Barake">
  <section>
    <h1 class="text-3xl sm:text-4xl font-bold px-4">
      Hello there! <span class="wave">ðŸ‘‹</span>
    </h1>
  </section>

  <section class="flex flex-col mt-4">
    {
      sortedPosts.map((post) => (
        <a
          href={`/${post.slug}`}
          class="block space-y-2 hover:bg-gray-800/50 p-4 rounded-lg transition-colors"
        >
          <time class="text-sm text-gray-400">
            {new Date(post.data.date).toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric"
            })}
          </time>

          <h3 class="text-xl font-medium">{post.data.title}</h3>

          {post.data.description && (
            <p class="text-sm text-gray-400 line-clamp-2">{post.data.description}</p>
          )}
        </a>
      ))
    }
  </section>
</BaseLayout>

<style>
  .wave {
    display: inline-block;
    animation: wave 2.5s ease-in-out infinite;
    transform-origin: 70% 70%;
  }

  @keyframes wave {
    0% {
      transform: rotate(0deg);
    }
    10% {
      transform: rotate(14deg);
    }
    20% {
      transform: rotate(-8deg);
    }
    30% {
      transform: rotate(14deg);
    }
    40% {
      transform: rotate(-4deg);
    }
    50% {
      transform: rotate(10deg);
    }
    60% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }
</style>
